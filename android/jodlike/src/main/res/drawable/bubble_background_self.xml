<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Shadow Layers-->
    <item android:gravity="left"
        android:right="9dp"
        android:bottom="3dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#000000"
                android:endColor="#04000000"
                android:angle="180"/>
            <corners android:radius="5dp" />
            <size android:width="6dp"/>
        </shape>
    </item>
    <item android:gravity="bottom"
        android:top="2dp"
        android:left="3dp"
        android:right="9dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#000000"
                android:endColor="#04000000"
                android:angle="270"/>
            <corners android:radius="5dp" />
            <size android:height="6dp"/>
        </shape>
    </item>

    <item android:height="20dp" android:gravity="right">
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="0%"
            android:toDegrees="0" >
            <shape android:shape="rectangle">
                <stroke android:width="14dp" android:color="#fff4e3" />
            </shape>
        </rotate>
    </item>
    <item android:right="7dp"
        android:left="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="#fff4e3" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</layer-list>