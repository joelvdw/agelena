<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Shadow Layers-->

    <item android:gravity="right"
        android:left="9dp"
        android:bottom="3dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#000000"
                android:endColor="#04000000"
                android:angle="0"/>
            <corners android:radius="5dp" />
            <size android:width="6dp"/>
        </shape>
    </item>
    <item android:gravity="bottom"
        android:top="2dp"
        android:right="3dp"
        android:left="9dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#000000"
                android:endColor="#04000000"
                android:angle="270"/>
            <corners android:radius="5dp" />
            <size android:height="6dp"/>
        </shape>
    </item>

    <item android:height="20dp"
        android:bottom="2dp"
        android:right="2dp">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="0%"
            android:pivotY="0%"
            android:toDegrees="0" >
            <shape android:shape="rectangle" >
                <stroke android:width="11dp" android:color="@color/design_default_color_background" />
            </shape>
        </rotate>
    </item>
    <item android:left="7dp"
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/design_default_color_background" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</layer-list>